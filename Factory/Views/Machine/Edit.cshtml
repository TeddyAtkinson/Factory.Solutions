@{
  Layout = "_Layout";
}
<h1>Dr. Sillystringz's Factory</h1>
<h2>Machine Center</h2>

@model Factory.Models.Machine

<p>Editing: @Model.Name</p>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <input type="submit" value="Update" />

}

@using (Html.BeginForm("Delete", "Machine"))
{
  @Html.Hidden("id", @Model.MachineId)
  <input type="submit" value="Delete" />
}

<p>@Html.ActionLink("Add Machine", "Create")</p>
